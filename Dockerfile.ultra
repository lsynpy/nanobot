FROM ghcr.io/astral-sh/uv:python3.12-bookworm-slim

WORKDIR /app

# Install minimal dependencies (no LiteLLM, no WhatsApp bridge)
COPY requirements.ultra.txt ./
COPY pyproject.toml README.md LICENSE ./

# Install Python dependencies (cached layer)
RUN uv pip install --system --no-cache -r requirements.ultra.txt && \
    rm -f requirements.ultra.txt

# Copy source and install nanobot
COPY nanobot/ nanobot/
COPY bridge/ bridge/
RUN uv pip install --system --no-cache .

# Create config directory
RUN mkdir -p /root/.nanobot

# Gateway default port
EXPOSE 18790

ENTRYPOINT ["nanobot"]
CMD ["status"]
